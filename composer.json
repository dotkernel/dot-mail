{
  "name": "dotkernel/dot-mail",
  "type": "library",
  "description": "DotKernel mail component based on zend-mail",
  "license": "MIT",
  "authors": [
    {
      "name": "n3vrax",
      "email": "tibi@apidemia.com"
    }
  ],
  "require": {
    "php": "^7.1",
    "container-interop/container-interop": "^1.1",
    "zendframework/zend-servicemanager": "^3.0",
    "zendframework/zend-mail": "^2.7",
    "zendframework/zend-expressive-template": "^1.0",

    "dotkernel/dot-event": "~0.1",
    "dotkernel/dot-helpers": "~0.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^4.8",
    "squizlabs/php_codesniffer": "^2.3"
  },
  "autoload": {
    "psr-4": {
      "Dot\\Mail\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "DotTest\\Mail\\": "test/"
    }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "0.2-dev"
    }
  }
}
